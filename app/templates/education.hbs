<h3 class="text-center">Education</h3>
<div class="col-md-6">
{{#each model as |school|}}
    <div class="col-md-offset-2 education-card">
        <div class="education-card col-md-12 col-sm-6 col-xs-12">
            <h4>{{school.name}}</h4>
            <h5>{{school.degree}}, {{school.duration}}</h5>
            {{#if school.major}}
            <p>Major: {{school.major}} | Minor: {{school.minor}}</p>
            <p>GPA: {{school.gpa}}</p>
            {{/if}}
            {{#if school.location}}
            <p>{{school.location}}</p>
            {{/if}}
        </div>
    </div>
{{/each}}
</div>
